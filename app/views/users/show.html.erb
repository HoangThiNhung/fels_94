<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.lessons.any? %>
      <h3>
        <%= @user.name %> <%= t "learned.study" %> <span><%= @user.lessons.count %></span> 
        <%= t "learned.lesson" %>
      </h3>
      <div>
        <%= render @lessons %>
      </div>
      <%= will_paginate @lessons %>
    <% end %>
  </div>
</div>