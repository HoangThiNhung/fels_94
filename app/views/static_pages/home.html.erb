<% provide :title, t("home") %>
<% if logged_in? %>
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <h2>
      <%= t "home_content" %>
    </h2>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>