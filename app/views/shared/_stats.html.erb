<% @user ||= current_user %>
<div class="stats">
  <a href="<%= user_following_index_path @user %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "following" %>
  </a>
  <a href="<%= user_follower_index_path @user %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
   <%= t "follower" %>
  </a>
</div>